<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_background_color"
    android:orientation="vertical"
    android:padding="25dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="top"
        android:hint="@string/cuadro_de_texto1"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@color/text_edits"
        android:textColor="@color/texts"
        android:textColorHint="@color/texts">
    </androidx.appcompat.widget.AppCompatEditText>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="top"
        android:hint="@string/cuadro_de_texto2"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@color/text_edits"
        android:textColor="@color/texts"
        android:textColorHint="@color/texts">
    </androidx.appcompat.widget.AppCompatEditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bttn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/bttn_text"
        android:textColor="@color/general_background_color"
        android:textStyle="bold"
        android:textSize="15dp"
        android:background="@color/button"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Resultados..."
        android:layout_margin="15dp"
        android:padding="10dp"
        android:background="@color/text_edits"
        android:textColor="@color/texts"
        android:textColorHint="@color/texts">
    </androidx.appcompat.widget.AppCompatTextView>

</LinearLayout>